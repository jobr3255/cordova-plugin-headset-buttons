<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-mytestplugin" version="0.0.1">
    <name>MyTestPlugin</name>

    <description>An Android Cordova plugin that allows users to display simple Toast messages at the bottom of the screen.</description>
    <license>MIT</license>

    <keywords>cordova,android,toast,message,alert</keywords>
    <repo>https://github.com/jobr3255/my-test-plugin.git</repo>
    <issue>https://github.com/jobr3255/my-test-plugin/issues</issue>
  
    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>
  
    <js-module src="www/mytestplugin.js" name="myTestPlugin">
        <clobbers target="window.plugins.myTestPlugin" />
    </js-module>
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="MyTestPlugin">
                <param name="android-package" value="com.josh.cordova.plugin.MyTestPlugin"/>
            </feature>
        </config-file>

        <source-file src="src/android/MyTestPlugin.java" target-dir="src/com/josh/cordova/plugin" />
    </platform>
</plugin>